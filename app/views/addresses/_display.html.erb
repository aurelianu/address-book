
<div id="homeCont">

<table id="addressList">
  <tr>
    <th>Name</th>
    <th>Surname</th>
    <th>Phone Number</th>
    <th>Address</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @addresses.each do |address| %>
  <tr>
    <td><%= address.name %></td>
    <td><%= address.surname %></td>
    <td><%= address.phoneNr %></td>
    <td><%= address.address %></td>
    <td><%= link_to 'Show', address %></td>
    <td><%= link_to 'Edit', edit_address_path(address) %></td>
    <td><%= link_to 'Destroy', address, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

</div>